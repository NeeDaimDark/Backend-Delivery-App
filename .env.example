# Server Configuration
SERVERPORT=9090
DOCKERSERVERURL=0.0.0.0

# Database (MongoDB Atlas)
MONGO_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/food_delivery_DB?retryWrites=true&w=majority

# JWT Secrets
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM="Food Delivery App <your_email@gmail.com>"

# Client URL (Frontend URL)
CLIENT_URL=https://your-flutter-app.com

# Upload Path
IMGURL=/uploads/images

# Node Environment
NODE_ENV=production
